{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",                
    "paths": {
      "@/*": ["./*"]         
    },
    "jsx": "react-native",
    //"jsx": "react-jsx",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
